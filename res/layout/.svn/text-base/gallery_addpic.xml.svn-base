<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout 
        android:id="@+id/gallery_addpic_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title"
        android:layout_alignParentTop="true">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择相册"
            android:textColor="#ffffffff"
            android:textSize="18dp"/>
        <ImageButton 
            android:id="@+id/gallery_addpic_imagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/imagebutton_back"></ImageButton>"
    </RelativeLayout>
    <GridView 
        android:layout_below="@+id/gallery_addpic_rl"
        android:id="@+id/gallery_addpic_grideview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:numColumns="1"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:verticalSpacing="2dp"
        android:background="@drawable/share_background"></GridView>
    <ImageView 
        android:layout_below="@+id/gallery_addpic_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bottom"/>
</RelativeLayout>