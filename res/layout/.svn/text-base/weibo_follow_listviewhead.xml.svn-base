<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     >

    
	<RelativeLayout 
	    android:id="@+id/listviewhead_relativelayout3"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginTop="5dp"
	    android:background="@drawable/item_select"
	    >
	    <ImageView 
	        android:layout_alignParentTop="true"
         android:id="@+id/listviewhead_image2"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roger"
        />
	    <RelativeLayout
	        android:id="@+id/listviewhead_relativelayout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/listviewhead_image2"
	        android:layout_marginTop="5dp">
	          <TextView 
	        android:id="@+id/listviewhead_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="15dp"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:text="ONE PIECE"
	        android:textColor="@android:color/black"></TextView>
	          <ImageView 
	              android:id="@+id/listviewhead_image3"
	              android:layout_width="fill_parent"
	              android:layout_height="wrap_content"
	              android:layout_marginTop="5dp"
	              android:background="@drawable/gallery_title"
	              android:layout_below="@+id/listviewhead_title"/>
	          <RelativeLayout 
	              android:id="@+id/listviewhead_relativelayout4"
	              android:layout_width="fill_parent"
	              android:layout_height="wrap_content"
	              android:layout_below="@+id/listviewhead_image3"
	              android:layout_marginTop="5dp">
	               <ImageView 
        				android:id="@+id/listviewhead_image1"
        				android:layout_width="60dp"
       					android:layout_height="60dp"
       					android:scaleType="fitXY"
        				android:background="@drawable/app"
        				android:layout_alignParentLeft="true"
        				android:layout_centerVertical="true"
        				android:layout_marginLeft="5dp"
       				 />
	               <TextView 
	                   android:id="@+id/listviewhead_name"
	                   android:layout_width="wrap_content"
	                   android:layout_height="wrap_content"
	                   android:layout_toRightOf="@+id/listviewhead_image1"
	                   android:layout_alignParentTop="true"
	                   android:layout_marginTop="5dp"
	                   android:layout_marginLeft="15dp"
	                   android:text="路飞"></TextView>
	               <RelativeLayout
	                   android:id="@+id/listviewhead_relativelayout5"
	                   android:layout_width="fill_parent"
	                   android:layout_height="wrap_content"
	                   android:layout_below="@+id/listviewhead_name"
	                   android:layout_toRightOf="@+id/listviewhead_image1"
	                   android:layout_marginLeft="5dp"
	                   android:layout_marginTop="15dp"
	                   android:layout_marginRight="5dp">
	                   <ImageView 
	                       android:id="@+id/listviewhead_pic"
	                       android:layout_width="wrap_content"
	                       android:layout_height="wrap_content"
	                       android:background="@drawable/time"
	                       android:layout_alignParentLeft="true"
	                       android:layout_marginLeft="10dp"
	                       android:layout_centerVertical="true"
	                       ></ImageView>"
	                    <TextView 
			          	android:id="@+id/listviewhead_time"
			            android:layout_toRightOf="@+id/listviewhead_pic"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="10dp"
			            android:textSize="10dp"
			            android:text="09:08"
			            android:layout_centerVertical="true"
					    android:textColor="@android:color/black"></TextView>
	                     <ImageView 
	                       android:id="@+id/listviewhead_pic2"
	                       android:layout_width="wrap_content"
	                       android:layout_height="wrap_content"
	                       android:background="@drawable/reply"
	                       android:layout_toLeftOf="@+id/listviewhead_browse"
	                       android:layout_marginRight="10dp"
	                        android:layout_centerVertical="true"
	                       ></ImageView>
			         <TextView 
			            android:id="@+id/listviewhead_browse"
			            android:layout_alignParentRight="true"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginRight="10dp"
			            android:textSize="10dp"
			            android:text="33"
			             android:layout_centerVertical="true"
			            android:textColor="@android:color/black"></TextView>
	               </RelativeLayout>
	              
	          </RelativeLayout>
	       
	    </RelativeLayout>
	</RelativeLayout>
</RelativeLayout>