<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/addwords_relativelayout">
	<RelativeLayout 
	    android:id="@+id/addword_relativelayout"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:background="@drawable/title"
        android:layout_alignParentTop="true"
	>
	    <com.starbaby_03.view.MainActivity_ImgBnt 
	        android:id="@+id/addword_but7"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="5dp"
            android:background="@drawable/back_over"
	        />
	     
	    <TextView 
	        android:id="@+id/addword_tv"
	        android:layout_centerInParent="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="添加文字"
	        android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_centerVertical="true"
	        ></TextView>
	    <com.starbaby_03.view.MainActivity_ImgBnt 
	        android:id="@+id/addword_but8"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="5dp"
            android:background="@drawable/ensuer_lock"
	        />
	</RelativeLayout>
	
	<RelativeLayout 
	    android:id="@+id/addword_RelativeLayout2"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@color/ground"
	    android:layout_above="@+id/addword_relativelayout2"
	    android:layout_below="@+id/addword_relativelayout">
		<!--   
	    <com.starbaby_03.view.addWordsView
            android:id="@+id/addword_heyelloFrontImageViewFrame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
       -->
        <ImageView
            android:id="@+id/addword_heyelloFrontImageViewFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/addword_imageView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            />
       <ImageView 
	    android:id="@+id/addword_imageView2"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:background="@drawable/title_bottom"
	    />
	   </RelativeLayout>
	 <RelativeLayout 
        android:id="@+id/addword_relativelayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       	android:layout_alignParentBottom="true"
        android:background="@drawable/bottom"
        >
        <com.starbaby_03.view.MainActivity_ImgBnt  
            android:id="@+id/addword_ib3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/word_over"
		    android:layout_alignParentLeft="true"
		    android:layout_centerVertical="true"
		    android:layout_marginLeft="60dp"
            ></com.starbaby_03.view.MainActivity_ImgBnt>
     
         <com.starbaby_03.view.MainActivity_ImgBnt  
            android:id="@+id/addword_ib4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pool_lock"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
		    android:layout_marginRight="60dp"
            >
            </com.starbaby_03.view.MainActivity_ImgBnt>
                   
    </RelativeLayout>
    
 </RelativeLayout> 
