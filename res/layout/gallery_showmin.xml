<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <RelativeLayout 
        android:id="@+id/main_relativelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/title"
        >
        <ImageButton 
            android:id="@+id/main_imagebutton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/imagebutton_back"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            >
        </ImageButton>  
		<TextView 
		    android:id="@+id/main_textview"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="18dp"
		    android:layout_centerInParent="true"
		    android:textColor="#ffffffff"
		    android:text=""></TextView>  
		     <ImageButton 
            android:id="@+id/gallery_showmin_imagebutton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/main_imagebutton2"
            android:layout_marginRight="10dp"
            android:background="@drawable/camera_over"></ImageButton>
		      <ImageButton 
            android:id="@+id/main_imagebutton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/imagebutton_insert"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            >
        </ImageButton>       
	 </RelativeLayout>   
	 <RelativeLayout 
	     android:id="@+id/main_relativelayout2"
	     android:layout_width="fill_parent"
	     android:layout_height="fill_parent"
	     android:layout_below="@+id/main_relativelayout"
	     android:background="@drawable/share_background"
	     >
	     <GridView 
	    android:id="@+id/gv"
   		android:layout_height="fill_parent" 
   		android:layout_width="fill_parent"
   		 android:numColumns="3" 
   		 android:layout_marginTop="10dp"
   		 android:verticalSpacing="5dp"
   		 android:horizontalSpacing="5dp"
   		 android:layout_below="@+id/main_relativelayout"
   		 android:layout_above="@+id/main_relativelayout2"
   		 android:listSelector="#00000000"></GridView>
	     <ImageView 
             android:id="@+id/gallery_mapstorage_imageview"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/title_bottom"
             android:layout_alignParentTop="true"/>
	 </RelativeLayout>
	
</RelativeLayout>
