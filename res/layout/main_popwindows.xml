<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/camera_lens_bk" >
    <Button
        android:id="@+id/main_popwindows_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="拍照"
        android:textSize="15dp" />
	 <Button
        android:id="@+id/main_popwindows_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="选择本地图片"
        android:textSize="15dp" />
	 <Button
        android:id="@+id/main_popwindows_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="取消"
        android:textSize="15dp" />
</LinearLayout>