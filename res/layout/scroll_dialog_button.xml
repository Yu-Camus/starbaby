<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     xmlns:android="http://schemas.android.com/apk/res/android">
     <Button 
         android:id="@+id/scroll_dialog_button1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="保存到私密显相册"
         android:textSize="11dp"
         android:layout_marginTop="10dp"
         android:background="@drawable/imagebutton_storepic"
         android:layout_centerHorizontal="true"/>
     <Button 
         android:id="@+id/scroll_dialog_button2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="分享相片"
         android:textSize="11dp"
         android:layout_below="@+id/scroll_dialog_button1"
         android:layout_marginTop="10dp"
         android:background="@drawable/imagebutton_sharepic"
         android:layout_centerHorizontal="true"
         />
</RelativeLayout>